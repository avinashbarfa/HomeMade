package com.avinashbarfa.homemade;

import android.content.Context;
import android.support.annotation.NonNull;
import android.support.v7.widget.RecyclerView;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.TextView;

import java.util.List;

/**
 * Created by Avinash Barfa on 3/4/2018.
 */

public class MyCategoriesAdapter extends RecyclerView.Adapter<MyCategoriesAdapter.ViewHolder> {


    private List<CategoriesList> categoriesLists;
    private Context context;

    public MyCategoriesAdapter(List<CategoriesList> categoriesLists, Context context) {
        this.categoriesLists = categoriesLists;
        this.context = context;
    }

    @Override
    public MyCategoriesAdapter.ViewHolder onCreateViewHolder(@NonNull ViewGroup parent, int viewType) {
        View view = LayoutInflater.from(parent.getContext()).inflate(R.layout.event_list, parent, false);
        return new ViewHolder(view);
    }

    @Override
    public void onBindViewHolder(@NonNull MyCategoriesAdapter.ViewHolder holder, int position) {
        CategoriesList listItem = categoriesLists.get(position);

        holder.txtEventName.setText(listItem.getEventName());
        holder.txtDate.setText(listItem.getEventDate());
    }

    @Override
    public int getItemCount() {
        return categoriesLists.size();
    }

    public class ViewHolder extends RecyclerView.ViewHolder {

        public TextView txtEventName;
        public TextView txtDate;

        public ViewHolder(View itemView) {
            super(itemView);

            txtEventName = (TextView) itemView.findViewById(R.id.eName);
            txtDate = (TextView) itemView.findViewById(R.id.eDate);
        }
    }
}
